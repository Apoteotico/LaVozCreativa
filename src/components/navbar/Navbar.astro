---
const navigation = [
  { name: "Inicio", href: "#inicio", current: true },
  { name: "Servicios", href: "#servicios", current: false },
  { name: "Coach", href: "#coach", current: false },
  { name: "Historia", href: "#historia", current: false },
  { name: "Testimonios", href: "#testimonios", current: false },
  { name: "Contacto", href: "#contacto", current: false },
  { name: "Preguntas", href: "#faqs", current: false },
];
---

<nav
  class="fixed w-full z-50 bg-violet-50 dark:bg-purple-900 border-b border-violet-50 dark:border-purple-800 transition-colors duration-300"
>
  <div
    class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4"
  >
    <!-- Logo -->
    <a href="#" class="flex items-center space-x-3 rtl:space-x-reverse">
      <img
        src="./logo-lvc.png"
        alt="Logo LVC"
        class="h-25 w-auto dark:hidden"
      />
      <img
        src="./logo-lvc-dark.png"
        alt="Logo LVC darkmode"
        class="h-25 w-auto hidden dark:block"
      />
    </a>

    <!-- Mobile menu button -->
    <button
      id="navbar-toggle"
      type="button"
      class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-violet-500 rounded-lg md:hidden hover:bg-violet-100 focus:outline-none focus:ring-2 focus:ring-violet-200 dark:text-violet-400 dark:hover:bg-violet-700 dark:focus:ring-violet-600"
      aria-controls="navbar-menu"
      aria-expanded="false"
    >
      <span class="sr-only">Abrir men√∫ principal</span>
      <svg
        class="w-5 h-5 menu-icon"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 17 14"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M1 1h15M1 7h15M1 13h15"></path>
      </svg>
      <svg
        class="w-5 h-5 close-icon hidden"
        aria-hidden="true"
        xmlns="http://www.w3.org/2000/svg"
        fill="none"
        viewBox="0 0 24 24"
      >
        <path
          stroke="currentColor"
          stroke-linecap="round"
          stroke-linejoin="round"
          stroke-width="2"
          d="M6 18L18 6M6 6l12 12"></path>
      </svg>
    </button>

    <!-- Navigation menu -->
    <div class="hidden w-full md:block md:w-auto" id="navbar-menu">
      <ul
        class="flex flex-col font-medium mt-4 rounded-lg bg-violet-50 md:space-x-8 rtl:space-x-reverse md:flex-row md:mt-0 md:border-0 md:bg-transparent dark:bg-purple-900 md:dark:bg-transparent"
      >
        {
          navigation.map((item, index) => (
            <li>
              <a
                href={item.href}
                class={`block py-2 px-3 md:p-0 rounded-sm transition-colors duration-200 ${
                  item.current
                    ? "text-white bg-[#6A387A] md:bg-transparent md:text-purple-900 dark:text-white dark:bg-purple-800 md:dark:bg-transparent"
                    : `text-gray-700 md:text-gray-700 dark:text-white dark:md:text-white ${
                        index % 2 === 0
                          ? "bg-[#6A387A] text-white md:bg-transparent md:text-gray-700 dark:bg-purple-800 md:dark:bg-transparent dark:md:text-white"
                          : "bg-transparent md:bg-transparent dark:bg-purple-900 md:dark:bg-transparent"
                      }`
                } md:hover:text-pink-700 md:dark:hover:text-yellow-200`}
                aria-current={item.current ? "page" : undefined}
              >
                {item.name}
              </a>
            </li>
          ))
        }
      </ul>
    </div>
  </div>
</nav>

<script>
  document.addEventListener("DOMContentLoaded", () => {
    const navbarToggle = document.getElementById("navbar-toggle");
    const navbarMenu = document.getElementById("navbar-menu");
    const menuIcon = document.querySelector(".menu-icon");
    const closeIcon = document.querySelector(".close-icon");

    // Check if dark mode is preferred
    const isDarkMode = window.matchMedia(
      "(prefers-color-scheme: dark)"
    ).matches;
    if (isDarkMode) {
      document.documentElement.classList.add("dark");
    }

    // Toggle mobile menu
    if (navbarToggle && navbarMenu && menuIcon && closeIcon) {
      navbarToggle.addEventListener("click", () => {
        const expanded = navbarToggle.getAttribute("aria-expanded") === "true";

        // Toggle menu visibility
        navbarMenu.classList.toggle("hidden");

        // Update aria-expanded
        navbarToggle.setAttribute("aria-expanded", (!expanded).toString());

        // Toggle icons
        menuIcon.classList.toggle("hidden");
        closeIcon.classList.toggle("hidden");
      });

      // Close menu when clicking on links (mobile)
      const navLinks = navbarMenu.querySelectorAll("a");
      navLinks.forEach((link) => {
        link.addEventListener("click", () => {
          if (window.innerWidth < 768) {
            // Only on mobile
            navbarMenu.classList.add("hidden");
            navbarToggle.setAttribute("aria-expanded", "false");
            menuIcon.classList.remove("hidden");
            closeIcon.classList.add("hidden");
          }
        });
      });
    }




  });

  // Optional: Toggle dark mode
  function toggleDarkMode() {
    document.documentElement.classList.toggle("dark");
  }
</script>
