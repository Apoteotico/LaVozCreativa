---
import Layout from "../layouts/Layout.astro";
---

<Layout title="404 - Page Not Found">
  <div
    class="flex flex-col items-center justify-center min-h-screen font-sans"
    style="background-color: rgba(255, 249, 196, 1);"
  >
    <h1 class="text-4xl font-bold mb-4">404 - Page Not Found</h1>
    <p class="text-lg mb-8">The page you are looking for does not exist.</p>

    <div>
      <div class="relative w-40 h-auto mt-8">
        <img
          src="/ballena-cola.png"
          alt="Ballena cola"
          class="w-full h-auto block"
          style="   mask-image: linear-gradient(to top, transparent 0%, transparent 10px, rgb(0, 0, 0) 20px);
      -webkit-mask-image: linear-gradient(to top, transparent 0%, transparent 8px, rgb(0, 0, 0) 20px);"
        />
        <span
          class="pointer-events-none absolute left-0 bottom-0 w-full"
          style="
        height: 20px; z-index: 20; background: linear-gradient(to top, rgba(255,249,196,1) 0%, rgba(255,249,196,0.7) 50%, rgba(255,249,196,0) 100%);"
        ></span>
      </div>
    </div>

    <a href="/" class="text-blue-500 hover:underline">Volver a la Escuela</a>
  </div>
</Layout>
