---
import stylesUrl from "../styles/global.css?url";

const { title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <title>{title}</title>

    <link rel="preload" href={stylesUrl} as="style" />
    <link rel="stylesheet" href={stylesUrl} />

    <meta
      name="description"
      content="Clases de canto, oratoria y expresión holistica para potenciar tu voz y presencia en publico, estamos en Mar del Plata, alrededores y online!."
    />

    <!-- Facebook Meta Tags -->
    <meta property="og:url" content="https://lavozcreativaescuela.com.ar" />
    <meta property="og:type" content="website" />
    <meta property="og:title" content="La Voz Creativa Escuela Holística de Expresión" />
    <meta property="og:description" content="Elegí la clase que nececitas para mejorar tu presencia profesional, coach de canto, oratoria o expresión holística - Claudia Inés Marturano coach vocal" />
    <meta property="og:image" content="/logo-lvc" />

    <!-- Twitter Meta Tags -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta property="twitter:domain" content="lavozcreativaescuela.com.ar" />
    <meta property="twitter:url" content="https://lavozcreativaescuela.com.ar" />
    <meta name="twitter:title" content="Clases de Canto y Coaching Vocal en Mar del Plata • La Voz Creativa" />
    <meta name="twitter:description"
      content="Mejorá tu técnica vocal, aprendé a hablar en público y conectá con tu expresión auténtica. Escuela dirigida por Claudia Inés Marturano"
    />
    <meta name="twitter:image" content="./images/logo-lvc.png" />

    <meta
      name="google-site-verification"
      content="W4XQP48FCMJTJQTaA7h6PGzSgPBehTSL2xs-z_Gl4m8"
    />

    <!-- Google analitycs -->
    <!-- Google tag (gtag.js) -->
    <!-- s -->
    <!-- <script>
      window.dataLayer = window.dataLayer || [];
      function gtag() {
        dataLayer.push(arguments);
      }
      gtag("js", new Date());

      gtag("config", "G-XRWPEMT1BB");
    </script> -->
  </head>
  <body class="min-h-screen bg-gradient-page">
    <slot />

    <!-- Script restaurar scroll -->
    <script lang="ts">
      window.addEventListener("beforeunload", () => {
        localStorage.setItem("scrollPos", window.scrollY.toString());
      });

      window.addEventListener("load", () => {
        const scrollPos = localStorage.getItem("scrollPos");
        if (scrollPos !== null) {
          window.scrollTo(0, parseInt(scrollPos, 10));
        }
      });
    </script>

    <!-- Google Analytics diferido tras interacción -->
    <script lang="ts">
      window.addEventListener("load", () => {
        const triggerLoad = () => {
          const script = document.createElement("script");
          script.src =
            "https://www.googletagmanager.com/gtag/js?id=G-XRWPEMT1BB";
          script.async = true;
          document.head.appendChild(script);

          script.onload = () => {
            window.dataLayer = window.dataLayer || [];
            function gtag() {
              dataLayer.push(arguments);
            }
            gtag("js", new Date());
            gtag("config", "G-XRWPEMT1BB");
          };

          window.removeEventListener("scroll", triggerLoad);
          window.removeEventListener("mousemove", triggerLoad);
          window.removeEventListener("touchstart", triggerLoad);
        };

        window.addEventListener("scroll", triggerLoad, { once: true });
        window.addEventListener("mousemove", triggerLoad, { once: true });
        window.addEventListener("touchstart", triggerLoad, { once: true });
      });
    </script>
  </body>
</html>
